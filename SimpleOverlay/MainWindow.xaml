<Window x:Class="SimpleOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Overlay Tool" Height="200" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="#AA000000"
        Topmost="True" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <!-- Butonlar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button x:Name="BtnLoad" Content="Load Image" Width="100" Height="30" Margin="5" Click="BtnLoad_Click"/>
                <ToggleButton x:Name="BtnMoveMode" Content="Move Mode" Width="100" Height="30" Margin="5" 
                             Checked="BtnMoveMode_Checked" Unchecked="BtnMoveMode_Unchecked"/>
                <Button x:Name="BtnClose" Content="Close" Width="80" Height="30" Margin="5" Click="BtnClose_Click"/>
            </StackPanel>
            
            <!-- OpaklÄ±k ayarÄ± -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="Opacity:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1" Value="1" Width="120" 
                        ValueChanged="OpacitySlider_ValueChanged" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- KullanÄ±m bilgisi -->
            <TextBlock Text="ðŸ’¡ Shift+Drag: Proportional resize | Normal Drag: Free resize" 
                       Foreground="#CCFFFFFF" FontSize="10" HorizontalAlignment="Center" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>